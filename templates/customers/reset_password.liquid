<!-- /templates/customers/reset_password.liquid -->

<section class="section bg--section m0 py4 f--main">
  <div class="wrapper section--wrapper text-align--center">
    <h1 class="t--section-title text-align--center f--main font-size--l lg--font-size--xl m0 py3">
      {{ 'customer.reset_password.title' | t }}
    </h1>


    <div class="grid">
      <div class="grid__item lg--one-third push--lg--one-third text-center">

        <div class="form-vertical">
          {% form 'reset_customer_password' %}

            <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

            {{ form.errors | default_errors }}

            <label for="ResetPassword" class="hidden-label f--main block mt2">{{ 'customer.reset_password.password' | t }}</label>
            <input type="password" value="" name="customer[password]" id="ResetPassword" class=" full--w input-underline input-underline--primary{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">

            <label for="PasswordConfirmation" class="hidden-label f--main block mt2">{{ 'customer.reset_password.password_confirm' | t }}</label>
            <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class=" full--w input-underline input-underline--primary{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">

            <div class="text-center">
              <input type="submit" class="mt3 btn btn--full bg--primary color--primary-overlay" value="{{ 'customer.reset_password.submit' | t }}">
            </div>

          {% endform %}
        </div>

      </div>
    </div>


  </div>
</section>
