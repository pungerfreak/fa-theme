<!-- /templates/customers/activate_account.liquid -->

<!-- /templates/customers/register.liquid -->

<section class="section bg--section m0 py4 f--main">
  <div class="wrapper section--wrapper text-align--center">
    <h1 class="t--section-title text-align--center f--main font-size--l lg--font-size--xl  m0 pt3 py1">
      {{ 'customer.activate_account.title' | t }}
    </h1>

    <p class="f--main mb3">{{ 'customer.activate_account.subtext' | t }}</p>

    {% comment %}
      This form must use 'activate_customer_password'
    {% endcomment %}
    <div class="form-vertical customer-form mx--auto">
      {% form 'activate_customer_password' %}

        {{ form.errors | default_errors }}

        <label for="CustomerPassword" class="hidden-label">{{ 'customer.activate_account.password' | t }}</label>
        <input type="password" value="" name="customer[password]" id="CustomerPassword" class="full--w input-underline input-underline--primary" placeholder="{{ 'customer.activate_account.password' | t }}">

        <label for="CustomerPasswordConfirmation" class="hidden-label">{{ 'customer.activate_account.password_confirm' | t }}</label>
        <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="full--w input-underline input-underline--primary" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">

        <input type="submit" class="btn btn--full bg--primary color--primary-overlay mt3" value="{{ 'customer.activate_account.submit' | t }}">
        <input type="submit" class="btn btn--full" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
      {% endform %}
    </div>


  </div>
</section>
