// Theme Colors
$colorPrimary: {{ settings.color_primary }};
$colorSecondary: {{ settings.color_secondary }};

$colorMainAccent: {{ settings.color_main_accent }};
$colorSecondaryAccent: {{ settings.color_secondary_accent }};
$colorShopAccent: {{ settings.color_shop_accent }};

$colorSections: {{ settings.color_section_bg }};
// Backgrounds
$colorBody: {{ settings.color_body_bg }};
$colorSection: {{ settings.color_section_bg }};
$colorWhite: #fff;
$colorBlack: #000;
$colorGray: #ddd;

// Mobile first breakpoints
// tablet min-width: 768px
// desktop min-width 1100px

@mixin clearfix() {
  &:after {
    content: '';
    display: table;
    clear: both; }
  *zoom: 1;
}

.site-header__main {
  padding-top: 0;
}

.site-header__main .site-nav-holder {
  @media only screen and (max-width: 1000px) {
    .site-nav__link {
      font-size: 14px;
      padding: 16px 12px;

      & > svg {
        padding-top: 3px;
        margin-left: 0;
      }
    }
  }
}

@media only screen and (max-width: 850px) {
  .site-header__main {
    padding-left: 0;
    padding-right: 0;
  }

  .site-header__meta-navigation,
  .site-header__main .site-nav-holder {
    display: none !important;
  }

  .site-header__mobile-icon--menu,
  .site-header__mobile-icon--cart {
    display: table-cell !important;
  }
}

.site-header__logo-col {
  width: 100%;
}

.site-header__logo-link {
  max-width: 450px !important;
  
  img {
    margin: 2rem;
  }
}

.site-header__mobile-icon--cart {
  float: right !important;
}

.section-page--partner {
  .rte--page .has-image {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    min-width: 0;
    width: auto;

    & > img {
      width: auto;
    }
  }  
}

.product-sticky {
  right: 0;
  left: auto;

  @media screen and (min-width: 769px) {
    &.lg--two-fifths {
      width: 40%;
    }
  }

  @media screen and (min-width: 1025px) {
    &.dt---one-quarter {
      width: 25%;
    }
  }

  &.fixed {
    right: 0;
    left: auto;
    position: fixed;

    .section--wrapper {
      padding-left: 0;
    }
  }
}


.product-images-slider {
  height: 200px;
  background-color: rgba(0,0,0,0.07);
  background-image: url(//cdn.shopify.com/s/files/1/2372/4967/files/image-filler.png?12133961466103843163);
  background-size: 20%;
  
  @media screen and (min-width: 768px) {
    height: 400px;
  }
  
  @media screen and (min-width: 1100px) {
    height: 400px;
  }
}

.product-images-slider__image {
  max-height: 200px;
  width: auto;
  margin: 0 auto;
  
  @media screen and (min-width: 768px) {
    max-height: 400px;
  }
  
  @media screen and (min-width: 1100px) {
    max-height: 400px;
  }
}

.lightbox .slick-slide {
  display: block;
}

.lightbox__holder {
  width: 600px;
}

.slider-nav {


    .slick-slide img {
        height: 50px;
    }
}