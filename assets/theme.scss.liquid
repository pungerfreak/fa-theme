  background-color: rgba(255,255,255,0.95);
  bottom: 0;
  color: $colorTextBody;
  display: none;
  left: 0;
  opacity: 0;
  overflow: hidden;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  @include transition(opacity,0.2s,ease-in-out);
}

.modal--is-active {

  display: block;
  opacity: 1;
  overflow: hidden;
}

.modal__inner {
  @include prefixer(transform-style, preserve-3d, moz webkit spec);
  height: 100%;
}

.modal__centered {
  @include transform(translateY(-50%));
  position: relative;
  top: 50%;

  .no-csstransforms & {
    top: 20%;
  }
}

.modal__close {
  border: 0;
  padding: $gutter;
  position: fixed;
  top: 0;
  right: 0;

  .icon {
    font-size: em(20px);
  }
}


